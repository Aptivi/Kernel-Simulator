    <None Include="TestData\Hacker.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Include="TestData\ScriptValid.uesh">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
